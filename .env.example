# ==========================================
# CRENCIALES DE OPENAI / LLM
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=deepseek-chat

# ==========================================
# CONFIGURACIÓN DEL SERVIDOR PYTHON
# ==========================================
APP_STATUS=development
PORT=8000
HOST=0.0.0.0

# ==========================================
# CONEXIÓN A LA BASE DE DATOS MYSQL (MODO LECTURA/ESCRITURA)
# ==========================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=agent_user
DB_PASSWORD=your_secure_password
DB_NAME=inasc_database
# Opcional para modelo SaaS
# DB_TENANT_NAME=tenant_database_name

# ==========================================
# CONFIGURACIÓN ON-PREMISE / MULTI-TENANT
# Define el comportamiento y encuadre del Agente
# ==========================================
TENANT_ID=inasc_001
COMPANY_NAME="Instruments & Applied Science INASC S.A.S."
COMPANY_URL="https://www.inasc.com.co"
# Tenant que se asignará a los prospectos que lleguen por el canal WebSocket (Widget JS)
WEB_CHANNEL_TENANT_ID=inasc_web


# ==========================================
# CANALES DE MENSAJERÍA
# ==========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# ID del tenant para el canal Telegram (configurable por entorno)
TELEGRAM_CHANNEL_TENANT_ID=inasc_telegram
# Token secreto para validar que los POSTs vienen de Telegram (opcional pero recomendado en produccion)
# Generarlo con: python -c "import secrets; print(secrets.token_hex(32))"
# TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
# WHATSAPP_API_TOKEN=your_whatsapp_token_here


# ==========================================
# ENVÍO DE CORREOS (CRM / Handoff)
# ==========================================
SMTP_HOST=smtp.tuservidor.com
SMTP_PORT=587
SMTP_USER=ventas@inasc.com.co
SMTP_PASSWORD=tupassword
DESTINATION_EMAILS=ventas@inasc.com.co,webmail@inasc.com.co
